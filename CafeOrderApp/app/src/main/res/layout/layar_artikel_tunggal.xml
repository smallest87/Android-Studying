<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/layoutArtikelTunggalTvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Judul Artikel]"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layoutArtikelTunggalTvPenulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Penulis"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutArtikelTunggalTvJudul"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/layoutArtikelTunggalTvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutArtikelTunggalTvPenulis"/>

    <ImageView
        android:id="@+id/layoutArtikelTunggalIvFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutArtikelTunggalTvTanggal"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/layoutArtikelTunggalTvFotoCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutArtikelTunggalIvFoto"/>

    <TextView
        android:id="@+id/LayoutArtikelTunggalTvTulisan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Isi tulisan dari Penulis]"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutArtikelTunggalTvFotoCaption" />

</androidx.constraintlayout.widget.ConstraintLayout>